<%# The "base" layout contains boilerplate common to *all* views. %>

<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= strip_tags(yield(:title)) + " â€“ " if content_for?(:title) %>
      Rails Foodlog
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Rails Foodlog <%= Rails.application.config.version %> (<%= l(Rails.application.config.version_time) %>) -->

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>

    <%# JavaScript must be in head for Turbolinks to work. %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>

    <%= yield(:head) %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%# Specifies the default name of home screen bookmark in iOS %>
    <meta name="apple-mobile-web-app-title" content="Rails Foodlog">
  </head>
  <body>
  <%= render 'shared/navbar' %>
   <div class="uk-container">
    <%= yield %>
  </div>
    <%= render 'shared/footer' %>

  </body>
</html>
